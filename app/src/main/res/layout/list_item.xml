<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingStart="12dp"
    android:paddingRight="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.mj.lazy.DopeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:inputType="textCapCharacters"
        android:text="Medium Text"
        android:textColor="#000000"
        android:id="@+id/tv_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="2dp"
        android:layout_toLeftOf="@+id/imgv_delete"
        android:layout_toStartOf="@+id/imgv_delete" />

    <com.mj.lazy.DopeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="#a7000000"
        android:id="@+id/tv_code"
        android:layout_below="@id/tv_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="2dp"
        android:layout_alignRight="@+id/tv_name"
        android:layout_alignEnd="@+id/tv_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgv_delete"
        android:src="@drawable/ic_delete_24dp"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_code"
        android:background="#09005d00"
        android:layout_marginTop="12dp"
        />


</RelativeLayout>